import java.io.*;
class Filedemo
{
	public static void main(String []args)
	{
		File f1=new File("/home/shubham/Desktop/Java/File/abc.txt");
		System.out.println("File Name = "+f1.getName());
		System.out.println("File Path = "+f1.getPath());
		System.out.println("File Absolute path = "+f1.getAbsolutePath());
		System.out.println(f1.exists()?"File Present":"File not Present");
		System.out.println(f1.isFile()?"It is File":"It is not File");
		System.out.println(f1.isDirectory()?"It is Directory":"It is Not Directory");
		System.out.println(f1.canRead()?"We can Read":"We Connot Read");
		System.out.println(f1.canWrite()?"We can write":"We Connot Write");
		System.out.println("Last Modified Time ="+f1.lastModified());
		System.out.println("Last Modified Date ="+f1.lastModified());
		System.out.println("Length="+f1.length());
		File f2=new File("/xyz.txt");
		//f1.rename(f2);
		//f1.delete();
	}
}
