<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="https://jakarta.ee/xml/ns/jakartaee"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
	id="WebApp_ID" version="5.0">
	<display-name>JSPProject</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>n1</param-name>
		<param-value>Driver</param-value>
	</context-param>
	<context-param>
		<param-name>n2</param-name>
		<param-value>Shubham</param-value>
	</context-param>
	  <servlet>
        <servlet-name>DemoServletContext</servlet-name>
        <servlet-class>servletdemo.DemoServletContext</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoServletContext</servlet-name>
        <url-pattern>/DemoServletContext</url-pattern>
    </servlet-mapping>
	
	<servlet>
		<servlet-name>DemoServletConfig</servlet-name>
		<servlet-class>servletdemo.DemoServletConfig</servlet-class>
		<init-param>
			<param-name>n1</param-name>
			<param-value>com.mysql.cj.jdbc.Driver</param-value>
		</init-param>
		<init-param>
			<param-name>n2</param-name>
			<param-value>John Doe</param-value>
		</init-param>
	</servlet>

	<!-- Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>DemoServletConfig</servlet-name>
		<url-pattern>/DemoServletConfig</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DemoServletConfig1</servlet-name>
		<servlet-class>servletdemo.DemoServletConfig1</servlet-class>
		<init-param>
			<param-name>n1</param-name>
			<param-value>Shubham</param-value>
		</init-param>
		<init-param>
			<param-name>n2</param-name>
			<param-value>Mungase</param-value>
		</init-param>
		<init-param>
			<param-name>n3</param-name>
			<param-value>Suhani</param-value>
		</init-param>
	</servlet>
	<!-- Servlet mapping -->
	<servlet-mapping>
		<servlet-name>DemoServletConfig1</servlet-name>
		<url-pattern>/DemoServletConfig1</url-pattern>
	</servlet-mapping>

</web-app>